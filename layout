<script>
  /* ====== ðŸ‘‡ HIER DEINE DATEN EINTRAGEN ðŸ‘‡ ====== */
  const kontakt = {
    name: "Max Mustermann",
    slogan: "Technologie & Innovation vernetzen",
    phone: "+49 170 1234567",

    // E-Mails werden zusammengesetzt -> nicht direkt im HTML sichtbar:
    mailPriv: { user: "max", domain: "beispiel.de" },
    mailWork: { user: "m.mustermann", domain: "firma.de" },
    mailUni:  { user: "max", domain: "uni.de" },

    // URL, die der QR-Code anzeigt:
    website: "https://deinportfolio.de"  // <--- eigene Website oder LinkedIn-Profil hier einsetzen
  };

  /* ====== ðŸ‘† BIS HIER ANPASSEN ðŸ‘† ====== */

  // Daten einsetzen
  document.getElementById("name").textContent = kontakt.name;
  document.getElementById("slogan").textContent = kontakt.slogan;
  document.getElementById("phone").textContent = kontakt.phone;

  // E-Mail-Adressen zusammensetzen
  function buildMail({user, domain}) {
    return user + "@" + domain;
  }
  const privMail = buildMail(kontakt.mailPriv);
  const workMail = buildMail(kontakt.mailWork);
  const uniMail = buildMail(kontakt.mailUni);

  // In die Links einsetzen (klickbar)
  document.getElementById("mailPriv").textContent = privMail;
  document.getElementById("mailPriv").href = "mailto:" + privMail;

  document.getElementById("mailWork").textContent = workMail;
  document.getElementById("mailWork").href = "mailto:" + workMail;

  document.getElementById("mailUni").textContent = uniMail;
  document.getElementById("mailUni").href = "mailto:" + uniMail;

  // QR-Code generieren (fÃ¼hrt nur zur Website, keine persÃ¶nlichen Daten)
  const qr = new QRious({
    element: document.getElementById("qr"),
    size: 160,
    value: kontakt.website,
    level: "H"
  });
</script>

